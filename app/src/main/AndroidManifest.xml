<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="UNSRIPAY"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.UNSRIPAY2"
        tools:targetApi="31">

        <!-- Activity PIN - Dijalankan saat aplikasi dimulai -->
        <activity
            android:name="com.example.unsripay.SplashScreenActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Activity Main -->
        <activity
            android:name="com.example.unsripay.MainActivity"
            android:exported="true" />

        <activity
            android:name="com.example.unsripay.PembayaranActivity"
            android:exported="true" />

        <activity
            android:name="com.example.unsripay.ScanQris"
            android:exported="true" />

        <activity
            android:name="com.example.unsripay.TransferActivity"
            android:exported="true" />

        <activity
            android:name="com.example.unsripaypin.PinActivity"
            android:exported="true" />

        <activity
            android:name=".RiwayatActivity"
            android:exported="true" />

        <activity
            android:name=".IsiSaldoActivity"
            android:exported="true" />

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>
